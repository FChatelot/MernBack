        }
      ]
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.23.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "mongodb": "^6.3.0",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.6",
    "babel-plugin-transform-import-meta": "^2.2.1"
  }
